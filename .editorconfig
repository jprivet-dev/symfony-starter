# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[composer.json]
indent_size = 4

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.xml]
indent_size = 2

[compose.yaml]
indent_size = 2

[compose.*.yaml]
indent_size = 2

[Makefile]
indent_style = tab
